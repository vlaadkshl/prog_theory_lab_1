            <column name="name" value="Програмування на Java"/>
        </insert>
        <insert tableName="Subject">
            <column name="name" value="Бази даних"/>
        </insert>
        <insert tableName="Subject">
            <column name="name" value="Операційні системи"/>
        </insert>
    </changeSet>
</databaseChangeLog>